{
  "name": "TimeBadge",
  "description": "Displays the current time as a Chrome Extension badge.",
  "version": "0.0.4",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "TimeBadge"
  },
  "permissions": [
    "idle",
    "storage"
  ]
}
